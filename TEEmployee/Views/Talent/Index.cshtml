@section Styles {
    <style>
        .wrapper {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            grid-auto-rows: minmax(200px, auto);
            margin-top: 100px;
        }

            .wrapper > div {
                background-color: #f2f2f2;
            }

        .box1 {
            grid-column: 1 / 2;
            grid-row: 1 / 2;
        }

        .box2 {
            grid-column: 2 / 3;
            grid-row: 1 / 2;
        }

        .box3 {
            grid-column: 1 / 2;
            grid-row: 2 / 5;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .box4 {
            grid-column: 2 / 3;
            grid-row: 2 / 5;
            display: flex;
            flex-direction: column;
        }

        .box5 {
            grid-column: 1 / 3;
            grid-row: 5 / 7;
        }

        p {
            margin: 0;
            padding: 2px;
        }

        h2 {
            margin: 0;
        }

        h4 {
            margin: 0;
            text-align: center;
            padding: 10px;
            background-color: #a9a9a9;
            margin-bottom: 10px;
        }

        .exp {
            flex: 1 0 auto;
        }

        .textblock {
            margin: 2em;
        }

        .outer {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .inner {
            display: flex;
            flex-direction: row;
            /*   gap: 10px; */
            justify-content: space-around;
        }

            .inner p {
                /*   flex: 1; */
                width: 30%;
                flex-direction: row;
                background-color: #dcdcdc;
                text-align: center;
                word-wrap: break-word;
            }
    </style>
}


