@{
    ViewBag.Title = "TalentRecord";
}

<div ng-controller="TalentRecordCtrl" class="container">

    @*<div class="container p-5 my-5 bg-dark text-white">*@
    <div class="container p-5 my-5 bg-light">
        <div class="box">
            <h2>人才資料庫</h2>
            <div class="form-check form-check-inline">
                <img src="~/Content/CV/{{user.empno}}.jpg" class="img-thumbnail" alt="{{user.name}}">
            </div>
            <div class="form-check form-check-inline">
                <h3>姓名：{{user.name}}</h3>
                <h3>生日：{{user.birthday}}</h3>
                <h3>年齡：{{user.age}}</h3>
            </div>
        </div>
        <br />
        <nav class="navbar navbar-light bg-light">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="col text-center nav-item" role="presentation">
                    <a class="btn btn-outline-success me-2 btn-lg nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="button" aria-controls="pills-home" aria-selected="true">基本資料與規劃</a>
                </li>
                <li class="col text-center nav-item" role="presentation">
                    <a class="btn btn-outline-success me-2 btn-lg nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="button" aria-controls="pills-profile" aria-selected="false">專案經歷</a>
                </li>
                <li class="col text-center nav-item" role="presentation">
                    <a class="btn btn-outline-success me-2 btn-lg nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="button" aria-controls="pills-contact" aria-selected="false">個人特質</a>
                </li>
            </ul>
        </nav>
        <nav class="navbar navbar-light bg-light">
            <form class="container-fluid justify-content-start" id="pills-tab" role="tablist">
                <div class="col text-center nav-item" role="presentation">
                    <a class="btn btn-outline-success me-2 btn-lg" role="button" ng-click="BasicInformation()">基本資料與規劃</a>
                </div>
                <div class="col text-center">
                    <button class="btn btn-outline-success me-2 btn-lg" type="button">專案經歷</button>
                </div>
                <div class="col text-center">
                    <button class="btn btn-outline-success me-2 btn-lg" type="button">個人特質</button>
                </div>
            </form>
        </nav>
    </div>

    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active " id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
            <div class="row">
                <div class="col-sm-6">
                    <div class="exp">
                        <h4 class="inner">
                            <span>學歷</span>
                            <span>學校</span>
                            <span>科系</span>
                        </h4>
                        <div class="container">
                            <div ng-repeat="educational in user.educational">
                                <div class="row align-items-start">
                                    <div class="col text-center">
                                        <h5>{{educational.split('　')[0]}}</h5>
                                    </div>
                                    <div class="col text-center">
                                        <h5>{{educational.split('　')[1]}}</h5>
                                    </div>
                                    <div class="col">
                                        <h5>{{educational.split('　')[2]}}</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">內容2</div>
        <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">內容3</div>
    </div>

    <div ui-view></div>

