
@{
    ViewBag.Title = "Review";
}

<h2>Review</h2>


<div ng-controller="ReviewCtrl" class="container" style="margin-top: 100px">

    <a ui-sref="AssessEmp">AssessEmp</a>
    <a ui-sref="Compare">Compare</a>
    <a ui-sref="EmpList">EmpList</a>


    <table class="table table-striped table-borderless table-hover">

        <thead class="thead-dark">
            <tr>
                <th>Content</th>
                <th>Choice</th>
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="item in Response">

                @*category name*@
                <td ng-if="item.Id == 0" ng-bind="item.Content" colspan="2"></td>
                @*content and choice*@
                <td ng-if="item.Content != '自評摘要' && item.Id != 0" ng-bind="item.Content"></td>

                <td ng-if="item.Content != '自評摘要' && item.Id != 0" ng-bind="item.Choice"></td>

                <td ng-if="item.Content=='自評摘要'" colspan="2">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">自評摘要</label>
                        <p ng-bind="item.Choice"></p>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

</div>