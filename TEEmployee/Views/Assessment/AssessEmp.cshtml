
<div ng-controller="AssessEmpCtrl" class="container">

    <a ui-sref="Review">Review</a>
    <a ui-sref="Compare">Compare</a>
    <a ui-sref="EmpList">EmpList</a>

    <table class="table table-striped table-borderless table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Content</th>
                <th>Choice</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in Response">

                <td ng-if="item.Id == 0" ng-bind="item.Content" colspan="2"></td>

                <td ng-if="item.Content != '自評摘要' && item.Id != 0" ng-bind="item.Content"></td>

                <td ng-if="item.Content != '自評摘要' && item.Id != 0">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" ng-model="item.ManagerChoice" name="inlineRadioOptions{{$index}}" id="inlineRadio1" value="option1">
                        <label class="form-check-label" for="inlineRadio1">Good</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" ng-model="item.ManagerChoice" name="inlineRadioOptions{{$index}}" id="inlineRadio2" value="option2">
                        <label class="form-check-label" for="inlineRadio2">Goood</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" ng-model="item.ManagerChoice" name="inlineRadioOptions{{$index}}" id="inlineRadio3" value="option3">
                        <label class="form-check-label" for="inlineRadio3">Goooood</label>
                    </div>
                </td>

            </tr>
        </tbody>
    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" ng-click="CreateMixResponse()" class="btn btn-warning" />
        </div>
    </div>

</div>
