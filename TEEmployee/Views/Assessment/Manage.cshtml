@{
    ViewBag.Title = "Manage";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Manage</h2>*@

@section Styles {
    @*<link href="@Url.Content("~/Styles/view_specific_style.css")" rel="stylesheet" type="text/css" />*@
    @*<link href="~/Content/css/table.css" rel="stylesheet" />*@
}

<div ng-controller="ManageCtrl" class="container" style="margin-top: 100px">

    <table class="table table-striped table-borderless table-hover">
        <thead class="thead-dark">
            <tr>
                @*<th>ID</th>
                    <th>CategoryId</th>*@
                <th>Content</th>
                <th>Choice</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in ManageAssessments">
                <td ng-if="item.Id == 0" ng-bind="item.Content" colspan="2"></td>

                <td ng-if="item.Content != '自評摘要' && item.Id != 0" ng-bind="item.Content"></td>

                <td ng-if="item.Content != '自評摘要' && item.Id != 0">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" ng-model="item.Choice" name="inlineRadioOptions{{$index}}" id="inlineRadio1" value="option1">
                        <label class="form-check-label" for="inlineRadio1">普通</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" ng-model="item.Choice" name="inlineRadioOptions{{$index}}" id="inlineRadio2" value="option2">
                        <label class="form-check-label" for="inlineRadio2">同意</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" ng-model="item.Choice" name="inlineRadioOptions{{$index}}" id="inlineRadio3" value="option3">
                        <label class="form-check-label" for="inlineRadio3">非常同意</label>
                    </div>
                </td>
                <td ng-if="item.Content=='自評摘要'" colspan="2" @*style="width:80%"*@>
                    @*<input class="form-control form-control-lg" type="text" ng-model="item.Choice" placeholder="自評摘要">*@
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">自評摘要</label>
                        <textarea class="form-control" ng-model="item.Choice" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" ng-click="CreateManageResponse()" class="btn btn-warning" />
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/WebApp/Assessment/ManageCtrl.js"></script>
}

