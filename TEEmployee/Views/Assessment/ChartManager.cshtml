
@{
    ViewBag.Title = "ChartManager";
}

@section Styles {
    <style>
        body {
            /*background-color: linen;*/
        }

        header {
            margin-top: 100px;
        }

        .chartmenu {
            display: flex;
            margin-bottom: 100px;
        }

        .chartmenu div {
            flex: 1;
            margin: 0 20px;
        }

        .clicked-mode {
            opacity: 1.0;
        }

        .unclicked-mode {
           opacity: 0.3;
        }

        .list-group-item {
            margin-bottom: 0;
        }
    </style>
}

<header>
    <h2>ChartManager</h2>
</header>


<div ng-controller="ChartManagerCtrl">


    <div class="container">
        <div class="chartmenu">
            <div>
                <label for="SelectYear"> Select the Year: </label>
                <select class="form-select" id="SelectYear" name="SelectYear" ng-model="selectedYear" ng-change="GetChartData()" aria-label="Select the Year">
                    <option ng-repeat="year in years" value="{{year}}">{{year}}</option>
                </select>
            </div>
            <div>
                <label for="SelectManager"> Select the Manager: </label>
                <select class="form-select manager" id="SelectManager" name="SelectManager" ng-model="selectedManager" ng-change="DrawChart()" aria-label="Select the Manager">
                    <option ng-repeat="manager in managers" value="{{manager}}">{{manager}}</option>
                </select>
            </div>
            <div>
                <label for="SelectCategory"> Select the Category: </label>
                <select class="form-select" id="SelectCategory" name="SelectCategory" ng-model="selectedCategory" ng-change="DrawChart()" aria-label="Select the Category">
                    <option ng-repeat="category in categories" value="{{category.id}}">{{category.name}}</option>
                </select>
            </div>
