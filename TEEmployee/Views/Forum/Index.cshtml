<div ng-controller="IndexCtrl">

    <div id="post-index" class="container" style="display: block;">

        <div class="btnSet">
            <button type="button" ng-click="createModal()" class="btn btn-outline-secondary" data-toggle="modal" data-target="#exampleModal">

                <span class="material-icons" style="font-size:1rem">edit</span>
                新增貼文
            </button>
        </div>

        <ol class="post-list">

            <li class="post-stub" ng-repeat="item in posts | filter:filterPage(currentPage) | limitTo: pageSize">
                <a ng-href="~/Forum/Post/{{item.id}}">
                    <h4 class="post-stub-title" ng-bind="item.title" style="width: 600px"></h4>
                    <h4 class="post-stub-title post-name" ng-bind="item.name" style="width: 150px"></h4>
                    <time class="post-stub-date post-name" ng-bind="item.postDate" style="width: 300px"></time>
                    <h4 class="post-stub-title post-name" ng-bind="item.count" style="width: 50px"></h4>
                    <p class="show-content"><small ng-bind="item.content.substring(0, 20) + '...'">The content is licensed under a Creative Commons Attribution-ShareAlike 2.5 Generic License.</small></p>
                </a>
            </li>


