
@{
    ViewBag.Title = "Details";
}


@section Styles {
    <style>
        header {
            margin-top: 100px;
        }
    </style>
}

<div ng-controller="DetailsCtrl" class="container">

    <header>
        <h2>@ViewBag.Title</h2>
    </header>

    <table class="table">
        <thead>
            <tr>
                <th>計畫編號</th>
                <th>工作項目</th>
                <th>工作時數</th>                
                <th>詳細工作內容</th>
                <th>(預計)完成日期</th>
                <th>備註</th>
            </tr>
        </thead>

        <tbody ng-repeat="project in projects">
            <tr ng-repeat="log in project.logs">
                <td rowspan="{{project.logs.length}}" ng-if="$index === 0" ng-bind="project.projno"></td>
                <td rowspan="{{project.logs.length}}" ng-if="$index === 0" ng-bind="project.itemno"></td>
                <td rowspan="{{project.logs.length}}" ng-if="$index === 0" ng-bind="project.workHour"></td>                
                <td ng-bind="log.content"></td>
                <td ng-bind="log.endDate"></td>
                <td ng-bind="log.note"></td>
        </tbody>
    </table>

</div>

@section Scripts {
    <script>
        var guid = '@ViewBag.id';
    </script>
    <script src="~/Scripts/WebApp/Tasklog/TasklogCtrl.js"></script>
}
