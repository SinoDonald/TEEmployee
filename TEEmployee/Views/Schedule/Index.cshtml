
@{
    ViewBag.Title = "Index";
}


@section Styles {
    <style>
        header {
            margin-top: 100px;
        }
    </style>
}




<div ng-controller="ScheduleCtrl" class="container">

    <header>
        <h2>Index</h2>
    </header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="navbar-nav">
            <a class="nav-item nav-link" ui-sref="Group">Group</a>
            <a class="nav-item nav-link" ui-sref="Individual">Individual</a>
            <a class="nav-item nav-link" ui-sref="Future">Future</a>
        </div>
    </nav>



    <div ui-view></div>
    <ul>
        <li ng-repeat="schedule in data">
            schedule [{{schedule.id}}] is owned by {{schedule.empno}}. Members are {{schedule.member}} Content: {{schedule.content}}
            <ul>
                <li ng-repeat="milestone in schedule.milestones">
                    Milestone {{milestone.id}} is {{milestone.content}}
                </li>
            </ul>
        </li>
    </ul>



</div>


@section Scripts {
    <script src="~/Scripts/WebApp/Schedule/ScheduleCtrl.js"></script>
}