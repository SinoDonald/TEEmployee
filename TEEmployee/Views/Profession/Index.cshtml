
@{
    ViewBag.Title = "核心專業盤點";
}


@section Styles {

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Agdasima:wght@700&display=swap" rel="stylesheet">
    <link href="~/Content/css/animate-btn.css" rel="stylesheet">
    <style>
        body {
            /*overflow: hidden;*/
        }

        header {
            margin-top: 72px;
        }

        h5 {
            font-family: 'Roboto', sans-serif;
        }

        #mainNav, #mainNav.navbar-shrink {
            box-shadow: none;
        }

        .uvcontainer {
            margin-top: 150px;
        }

        .schedule-fixed-top {
            position: fixed;
            /*top: 72px;*/
            top: 5rem;
            right: 0;
            left: 0;
            z-index: 998;
        }

        .skill {
            display: flex;
        }

            .skill > div {
                flex: 1;
                margin: 5px;
            }

        .chartmenu {
            display: flex;
            position: fixed;
            /*top: 80px;*/
            top: 5.5rem;
            left: 45%;
            /*right: 0;
            left: 0;*/
            z-index: 999;
            /*margin-left: 22em;*/
            align-items: center;
            width: 800px;
        }

            .chartmenu div { /*
                flex: 1 200px;*/
                margin: 0 20px;
            }

        .list-group-item {
            margin: 0;
        }

        .tooltipParent .tooltipChild {
            visibility: hidden;
        }

        .tooltipParent:hover .tooltipChild {
            visibility: visible;
        }

        .borderlessInput {
            border: none;
            background-color: inherit;
            outline: 0;
            font-size: 1.2rem;
            width: 300px;
            height: 30px;
            line-height: 1.5;
        }

            .borderlessInput:focus {
                border: none;
                background-color: inherit;
                outline: 0;
                width: 300px;
                height: 30px;
            }

            .borderlessInput:hover {
                background-color: inherit;
            }


        table {
            height: 1px;
        }

        td {
            font-family: 'Agdasima', sans-serif;
        }

        .scoreInput {
            border: none;
            background-color: inherit;
            outline: 0;
            font-size: 1.2rem;
            width: 100%;
            /*height: 100%;*/
            /*padding: 0.375rem 0.75rem;*/
            /*padding: 5% 0;*/
            text-align: center;
            /*line-height: 1.5;*/
        }

            .scoreInput:focus {
                border: none;
                background-color: inherit;
                /*outline: 0;*/
                outline: thick double #32a1ce;
                width: 100%;
            }

            .scoreInput:hover {
                background-color: inherit;
            }

        .top-btn {
            position: fixed;
            bottom: 15vh;
            right: 5vw;
            z-index: 99;
        }

        .pop {
            white-space: pre-line;
        }

        .has-error {
            color: red;
        }

        .banner {
            /*background-color: cadetblue;*/
            text-align: center;
            width: 66%;
            padding: 0.5em;
        }

        .sega {
            border: 5px solid grey;
        }

            .sega h2 {
                padding: 0.5em;
            }

        .score {
            /*width: 100px;*/
            /*border: 5px solid #666;*/
            width: 2em;
            height: 2em;
            /* width: 20px;
            height: 20px;*/
            border-radius: 50%;
            background-color: rgb(230, 99, 107);
            color: white;
            vertical-align: central;
            font-size: 1.5em;
            text-align: center;
            font-family: 'Agdasima', sans-serif;
            line-height: 2em;
        }

        .nav-isActive {
            /*border-bottom: 2px solid #f4623a;*/
            /*background-color: #FFB347;*/
            background-color: rgba(255, 179, 71, 0.8);
            color: white;
        }

        .nav-custom {
            border-radius: 10px;
        }
    </style>
}

<div ng-controller="ProfessionCtrl" class="container-fluid">

    @*<header>
            <h2>核心專業盤點</h2>
        </header>*@

    <nav class="navbar navbar-expand-lg navbar-light bg-light schedule-fixed-top">
        <a class="navbar-brand" href="">核心專業盤點</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link nav-custom" ng-class="{'nav-isActive': isActive('/Skill')}" ui-sref="Skill">群組專業規劃</a>

                @if (Session["role"] is "Manager")
                {
                    <a class="nav-item nav-link nav-custom" ng-class="{'nav-isActive': isActive('/Score')}" ui-sref="Score">群組專業盤點</a>
                    <a class="nav-item nav-link nav-custom" ng-class="{'nav-isActive': isActive('/Chart')}" ui-sref="Chart">長條圖</a>
                    <a class="nav-item nav-link nav-custom" ng-class="{'nav-isActive': isActive('/Scatter')}" ui-sref="Scatter">散佈圖</a>
                }
                <a class="nav-item nav-link nav-custom" ng-class="{'nav-isActive': isActive('/Personal')}" ui-sref="Personal">個人專業盤點</a>
            </div>
        </div>
    </nav>

    <div ui-view></div>

</div>


@section Scripts {
    <script src="~/Scripts/WebApp/Profession/ProfessionChart.js"></script>
    <script src="~/Scripts/WebApp/Profession/ProfessionCtrl.js"></script>
    <script src="~/Scripts/chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/hammerjs@2.0.8"></script>
    <script src="~/Scripts/chartjs-plugin-zoom.min.js"></script>
}